  gem 'rspec-rails'
  gem 'timecop'
  gem 'sinon-rails'
  gem 'capybara'
  gem 'selenium-webdriver'
  gem 'poltergeist'
  gem 'guard-rspec', require: false
  gem 'webmock', require: false
end

gem 'responders'
